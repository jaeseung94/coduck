<script>
$(function() {
	drawingStar();
});
	function drawingStar() {
		$(".star_yellow").each(function(index, el) {
			var score = $(el).data("star-score");
	
			var star = "";
			for(var i=1; i<=score; i++) {
				star += '<i class="fas fa-star"></i>';
			}
			$(el).append(star);
			
			var emptyStar = "";
			for(var i=1; i<=5-score; i++) {
				emptyStar += '<i class="far fa-star"></i>';
			}
			
			$(el).append(emptyStar);
		});
	}
</script>        
